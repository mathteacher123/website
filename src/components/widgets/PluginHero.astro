---
interface Props {
  title: string;
  subtitle: string;
  badge?: {
    text: string;
    icon?: string;
  };
  rating?: {
    value: number;
    count: number;
  };
  pricing?: {
    price: string;
    period: string;
  };
  actions: Array<{
    text: string;
    href: string;
    variant: 'primary' | 'secondary';
    icon?: string;
  }>;
  image?: {
    src: string;
    alt: string;
  };
}

const { title, subtitle, badge, rating, pricing, actions, image } = Astro.props;
---

<section class="relative overflow-hidden pt-8 pb-16 lg:pt-12 lg:pb-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
      <div class="flex flex-col gap-6">
        {
          badge && (
            <div class="inline-flex w-fit items-center gap-2 rounded-full border border-blue-100 bg-blue-50 px-3 py-1 text-xs font-bold text-primary uppercase tracking-wide">
              {badge.icon && <span class="material-symbols-outlined text-[16px]">{badge.icon}</span>}
              {badge.text}
            </div>
          )
        }
        <h1 class="text-4xl font-black leading-tight tracking-tight text-slate-900 sm:text-5xl lg:text-6xl">
          {title}
        </h1>
        <p class="text-lg leading-relaxed text-text-muted max-w-lg">
          {subtitle}
        </p>
        {
          rating && (
            <div class="flex items-center gap-4 text-sm font-medium text-text-muted">
              <div class="flex items-center gap-1">
                <div class="flex text-yellow-400">
                  {Array.from({ length: 5 }, () => (
                    <span class="material-symbols-outlined text-[20px] fill-current">star</span>
                  ))}
                </div>
                <span class="ml-1 text-text-main font-bold">{rating.value}/5</span>
              </div>
              <span class="h-1 w-1 rounded-full bg-slate-300" />
              <span>{rating.count.toLocaleString()}+ Active Installs</span>
            </div>
          )
        }
        {
          pricing && (
            <div class="flex items-center gap-4 text-sm font-medium text-text-muted pt-4">
              <div class="flex flex-col">
                <span class="text-3xl font-bold text-text-main">{pricing.price}</span>
                <span class="text-xs text-text-muted">{pricing.period}</span>
              </div>
            </div>
          )
        }
        <div class="flex items-center gap-3 w-full sm:w-auto pt-4">
          {
            actions.map((action) => (
              <a
                href={action.href}
                class={`flex h-12 flex-1 items-center justify-center gap-2 rounded-full px-8 text-base font-bold transition-all hover:scale-105 active:scale-95 sm:flex-none ${
                  action.variant === 'primary'
                    ? 'bg-primary px-8 text-white shadow-lg shadow-blue-600/20 hover:bg-primary-hover'
                    : 'border border-slate-200 bg-white px-6 text-text-main hover:bg-slate-50'
                }`}
              >
                <span>{action.text}</span>
                {action.icon && <span class="material-symbols-outlined text-[20px]">{action.icon}</span>}
              </a>
            ))
          }
        </div>
      </div>
      {
        image && (
          <div class="relative w-full">
            <div class="absolute -inset-1 rounded-[2.5rem] bg-gradient-to-tr from-blue-100 to-yellow-100 opacity-60 blur-3xl" />
            <div class="relative aspect-[4/3] overflow-hidden rounded-[2rem] border border-slate-200 bg-white shadow-xl shadow-slate-200/50">
              <img src={image.src} alt={image.alt} class="w-full h-full object-cover" />
              <div class="absolute bottom-6 left-6 right-6 flex items-center justify-between rounded-xl bg-white/90 p-4 backdrop-blur-md border border-slate-100 shadow-sm">
                <div class="flex items-center gap-3">
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-500 text-white shadow-md">
                    <span class="material-symbols-outlined">trending_up</span>
                  </div>
                  <div>
                    <p class="text-sm font-bold text-text-main">Conversion Rate</p>
                    <p class="text-xs text-blue-600 font-medium">+24% this month</p>
                  </div>
                </div>
                <div class="text-slate-400">
                  <span class="material-symbols-outlined">chart_data</span>
                </div>
              </div>
            </div>
          </div>
        )
      }
    </div>
  </div>
</section>
